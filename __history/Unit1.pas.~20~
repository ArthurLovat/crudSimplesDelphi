unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.StdCtrls, Data.DB, Vcl.Grids,
  Vcl.DBGrids, Vcl.Mask, Vcl.ExtCtrls, Vcl.DBCtrls, Vcl.Buttons;

type
  TfrmCadReceitas = class(TForm)
    lblCadastroReceita: TLabel;
    lblNome: TLabel;
    lblProduto: TLabel;
    lblDuracao: TLabel;
    lblInsumos: TLabel;
    btnInserir: TButton;
    btnSalvar: TButton;
    btnEditar: TButton;
    btnExcluir: TButton;
    Button1: TButton;
    btnCancelar: TButton;
    DBGrid1: TDBGrid;
    dbenome: TDBEdit;
    dbeProduto: TDBEdit;
    dbeDuracao: TDBEdit;
    dbeInsumos: TDBEdit;
    dbmInsumos: TDBMemo;
    btnRecarregar: TButton;
    procedure btnCancelarClick(Sender: TObject);
    procedure btnSalvarClick(Sender: TObject);
    procedure FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
    procedure btnRecarregarClick(Sender: TObject);
    procedure btnInserirClick(Sender: TObject);
    procedure btnExcluirClick(Sender: TObject);

  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmCadReceitas: TfrmCadReceitas;

implementation

{$R *.dfm}

uses UnitDM;

procedure TfrmCadReceitas.btnCancelarClick(Sender: TObject);
begin

  btnInserir.Enabled := true;
  btnExcluir.Enabled := true;
  btnSalvar.Enabled := false;
  btnCancelar.Enabled := false;

  DM.tbReceitas.Cancel;

  if(DM.dsReceitas.DataSet.State in [dsInsert, dsEdit]) then
  begin
    DM.dsReceitas.DataSet.Cancel;
  end;

end;

procedure TfrmCadReceitas.btnExcluirClick(Sender: TObject);
begin
  if Application.MessageBox('Deseja deletar o registro selecionado?','Atenção', MB_ICONQUESTION+MB_YESNO) = mrYes then
     begin
      DM.tbReceitas.Delete;
     end;
end;

procedure TfrmCadReceitas.btnInserirClick(Sender: TObject);
begin
  btnInserir.Enabled := false;
  btnExcluir.Enabled := false;
  btnSalvar.Enabled := true;
  btnCancelar.Enabled := true;

  DM.tbReceitas.Append;
end;

procedure TfrmCadReceitas.btnRecarregarClick(Sender: TObject);
begin
  DM.tbReceitas.Close;
  DM.tbReceitas.Open;
end;

procedure TfrmCadReceitas.btnSalvarClick(Sender: TObject);
begin
  btnInserir.Enabled := true;
  btnExcluir.Enabled := true;
  btnSalvar.Enabled := false;
  btnCancelar.Enabled := false;

end;


procedure TfrmCadReceitas.FormKeyDown(Sender: TObject; var Key: Word; Shift: TShiftState);
begin
  case (Key) of
    VK_f3:
    btnSalvar.Click;
    VK_F4:
    begin
      if (ssAlt in Shift) then
      begin
        Key := 0;
      end;
    end;

  end;
end;


end.


